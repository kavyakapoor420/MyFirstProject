<% layout('/layouts/boilerplate.ejs') %>

<body>
    <div class="row ">
        <!-- offset means to give some space from left side  -->
        <div class="col-8 offset-1 mt-5">
    <h2 class="mb-3">Create new listing</h2>
    <form method="POST" action="/listings">
        <div class="mb-3">
             <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="enter title of your listing " type="text" class="form-control" />
        </div>
        <br /><br />
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" placeholder="enter description of listing" class="form-control" ></textarea>
        </div>
        <br /><br />
        <div class="mb-3">
            <label for="image" class="form-label">image</label>
            <input name="listing[image]" placeholder="enter image URL/Link " class="form-control" />
        </div>
        <br /><br />
    <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">price</label>
            <input name="listing[price]" placeholder="enter price " class="form-control" />
        </div>
        <br /><br />
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">country</label>
            <input name="listing[country]" placeholder="enter country " class="form-control" />
        </div>
    </div>
        <br /><br />
        <div class="mb-3">
            <label for="location" class="form-label">location</label>
            <input name="listing[location]" placeholder="enter location " class="form-control" />
        </div>
        <br /><br />
        
        <button class="btn  mb-5" style="background-color: tomato;">Add</button>
    </form>

     </div>
</div>
</body>

