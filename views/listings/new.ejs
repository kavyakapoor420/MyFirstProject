<% layout('/layouts/boilerplate.ejs') %>

<body>
    <div class="row">
        <!-- offset means to give some space from left side -->
        <div class="col-8 offset-1 mt-5">
            <h2 class="mb-3">Create new listing</h2>
            <form method="POST" action="/listings" novalidate class="needs-validation" id="listingForm">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" id="title" required placeholder="Enter title of your listing" type="text" class="form-control" />
                    <div class="invalid-feedback">
                        Please enter some title.
                    </div>
                </div>
                <br /><br />
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" required placeholder="Enter description of listing" class="form-control"></textarea>
                </div>
                <br /><br />
                <div class="mb-3">
                    <label for="image" class="form-label">Image</label>
                    <input name="listing[image]" placeholder="Enter image URL/Link" class="form-control" />
                </div>
                <br /><br />
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" required placeholder="Enter price" class="form-control" />
                    </div>
                    <br /><br />
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" required placeholder="Enter country" class="form-control" />
                        <div class="invalid-feedback">Please enter a country.</div>
                    </div>
                </div>
                <br /><br />
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" placeholder="Enter location" class="form-control" />
                </div>
                <br /><br />
                <button class="btn mb-5" style="background-color: tomato;">Add</button>
            </form>
        </div>
    </div>

    <script>
        // JavaScript to enable Bootstrap's form validation feedback
        (function () {
            'use strict'
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.querySelectorAll('.needs-validation')

            // Loop over them and prevent submission
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>

</body>