<% layout('/layouts/boilerplate.ejs') %>

<body>
   <div class="row ">
      <div class="col-8 offset-1 mt-3">
         <h2 class="mt-3">Edit your listing</h2>

         <form method="POST" novalidate class="needs-validation" action="/listings/<%=listing._id%>?_method=PUT">
             <div class="mb-1">
               <label for="title" class="form-label">Title</label>
            <input name="listing[title]" required value="<%=listing.title%>" class="form-control" type="text"/>
            <div class="invalid-feedback">
               please enter some title
             </div>   
         </div> 
            <br/><br/>
            <div class="mb-1">
               <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" required class="form-control"><%=listing.description%></textarea>
            <div class="invalid-feedback">
               Please center some valid description.
             </div>   
         </div>
            <br/><br/>
            <div class="mb-1">
               <label for="image" class="form-label">Image URL</label>
            <input name="listing[image]" required placeholder="enter image url/LINK" class="form-control" value="<%=listing.image%>" type="text"/>
            </div>
            <br/><br/>
            <div class="mb-1">
               <label for="location" class="form-label">Location</label>
            <input name="listing[location]" value="<%=listing.location%>" class="form-control" type="text"/>
            </div>
            <br/><br/>
         <div class="row">
            <div class="mb-1 col-md-4">
               <label for="price" class="form-label">Price</label>
            <input name="listing[price]" required value="<%=listing.price%>" class="form-control" type="number"/>
            <div class="invalid-feedback">
               Please enter some valid price.
             </div>
         </div>
            <br/><br/>
            <div class="mb-1 col-md-8">
               <label for="country" class="form-label">Country</label>
            <input name="listing[country]" required value="<%=listing.title%>" class="form-control" type="text"/>
            </div>
         </div>
            <br/><br/>
      
            <button class="btn mb-3" style="background-color: tomato;">Edit This Listing</button>
   
           </form>
      </div>
   </div>
      

</body>
